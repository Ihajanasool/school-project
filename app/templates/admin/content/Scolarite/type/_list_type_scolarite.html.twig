{% extends 'admin/_base_admin.html.twig' %}

{% set menu_scolarite =true %}
{% set menu_user =true %}
{% block title %}Type scolarité{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20 ">Types de scolarité</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="{{ path('scolarite_type_manage') }}" class="btn btn-primary">Nouveau</a>
                    </div>
                </div>
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Libelle</th>
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DIRECTION') %}
                            <th>Action</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Libelle</th>
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DIRECTION') %}
                            <th>Action</th>
                        {% endif %}
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for type in types %}
                        <tr>
                            <td>{{ type.libelle }}</td>
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DIRECTION') %}
                            <td>
                                <a class="btn btn-outline-success btn-sm" title="Modifier"
                                   href="{{ path('scolarite_type_manage',{'id':type.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                                <a class="btn btn-outline-danger btn-sm" title="Supprimer"
                                   href="{{ path('scolarite_type_remove',{'id':type.id}) }}">
                                    <i class="ti-trash"></i>
                                </a>
                            </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}