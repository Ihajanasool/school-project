{% extends 'admin/_base_admin.html.twig' %}

{% set menu_administration =true %}
{% set menu_user =true %}

{% block title %}Administration{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20 ">Administrations</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="{{ path('administrator_manage') }}" class="btn btn-primary">Nouveau</a>
                    </div>
                </div>
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Poste</th>
                        {% if is_granted('ROLE_ADMIN') %}
                            <th>Action</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Poste</th>
                        {% if is_granted('ROLE_ADMIN') %}
                            <th>Action</th>
                        {% endif %}
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for admin in admins %}
                        {% if admin.deletedAt == null %}
                            <tr>
                                <td>{{ admin.user?admin.user.nom:'' }}</td>
                                <td>{{ admin.type?admin.type.libelle:'' }}</td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>
                                        <a class="btn btn-outline-success btn-sm" title="Modifier"
                                           href="{{ path('administrator_manage',{'id':admin.id}) }}">
                                            <i class="ti-pencil"></i>
                                        </a>
                                        <a class="btn btn-outline-primary btn-sm" title="Details"
                                           href="{{ path('administrator_details',{'id':admin.id}) }}">
                                            <i class="ti-eye"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm" title="Supprimer"
                                           href="{{ path('administrator_delete',{'id':admin.id}) }}">
                                            <i class="ti-trash"></i>
                                        </a>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}