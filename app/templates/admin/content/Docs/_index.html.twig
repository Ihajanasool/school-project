{% extends 'admin/_base_admin.html.twig' %}
{% set menu_docs = true %}
{% block title %}Documentation{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20">Documentation sekoliko</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="{{ path('create_docs') }}" class="btn btn-primary">Nouveau</a>
                    </div>
                </div>
                <ul class="list-group">
                    {% for doc in docs %}
                        <li class="list-group-item">
                            <h4>{{ doc.title }} </h4>
                            <mark>>>></mark> {{ doc.description }}
                            <div style="right: 5px;position: absolute">
                                <a title="Modifier" href="{{ path('create_docs', {'id':doc.id}) }}" class="btn btn-sm btn-success text-right" >
                                    <i class="ti-pencil"></i>
                                </a>
                                <a title="Supprimer" href="{{ path('remove_docs', {'id':doc.id}) }}" class="btn btn-sm btn-danger text-left">
                                    <i class="ti-trash"></i>
                                </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
